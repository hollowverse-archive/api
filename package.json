{
  "name": "hollowverse-api",
  "version": "1.0.0",
  "private": true,
  "description": "GraphQL API for Hollowverse",
  "repository": "https://github.com/hollowverse/api.git",
  "scripts": {
    "lint": "npm-run-all -s generate-graphql-types -p -c common-check validate-queries lint-js lint-ts lint-schema find-breaking-schema-changes check-ts",
    "clean-clients": "del-cli clients",
    "pretest": "run-s lint clean-clients",
    "test": "jest --colors",
    "find-breaking-schema-changes": "node -r 'ts-node/register' src/scripts/findBreakingSchemaChanges.ts",
    "validate-queries": "graphql-validator -s './schema.graphql' '{src,clients}/**/*.graphql'",
    "lint-schema": "graphql-schema-linter schema.graphql",
    "check-ts": "tsc --project ./src --noEmit",
    "lint-js": "eslint '**/*.js{,x}'",
    "lint-ts": "tslint './*.ts' 'src/**/*.ts{,x}' -e 'src/typings/schema.ts' -e 'src/database/migrations/*.ts' --project tsconfig.json",
    "introspect-schema": "apollo-codegen introspect-schema schema.graphql --output schema.json",
    "generate-types-from-template": "gql-gen --file ./schema.json --project src/typings",
    "generate-graphql-types": "run-s introspect-schema generate-types-from-template",
    "generate-graphql-types/dev": "nodemon -q --watch schema.graphql --exec 'run-p generate-graphql-types'",
    "server/dev": "PORT=${PORT:-8080} nodemon -q --watch ./src --ext ts --exec 'node -r 'ts-node/register' src/server.ts'",
    "dev": "npm-run-all -s generate-graphql-types -p  --aggregate-output '*/dev'",
    "database/mock": "ts-node src/scripts/insertMockData.ts --project ./src",
    "build-ts": "tsc --project ./src",
    "build": "run-s generate-graphql-types build-ts",
    "clean": "del-cli ./dist schema.json src/typings/schema.ts",
    "start": "node dist/server.js",
    "validate-filenames": "validate-filenames --config validateFilenames.js",
    "lint-staged": "lint-staged",
    "deploy": "node ./deploy.js",
    "pre-push": "yarn pretest",
    "pre-commit": "yarn common-check",
    "common-check": "run-p -l -c --aggregate-output validate-filenames lint-staged 'clown check'",
    "tslint": "yarn lint-ts",
    "jest": "jest --colors",
    "clown": "clown"
  },
  "license": "Unlicense",
  "homepage": "https://github.com/hollowverse/api#readme",
  "lint-staged": {
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{graphql,gql}": [
      "prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "schema.graphql": [
      "graphql-schema-linter"
    ],
    "**/!(package).json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "pre-push": "yarn pre-push",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "resolutions": {
    "graphql": "^0.11.0",
    "babel-core": "7.0.0-bridge.0"
  },
  "dependencies": {
    "@hollowverse/class-sanitizer": "^0.1.2",
    "apollo-server-express": "^1.3.2",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "class-validator": "^0.7.2",
    "common-tags": "^1.7.2",
    "cors": "^2.8.4",
    "dataloader": "^1.3.0",
    "express": "^4.16.2",
    "got": "^7.1.0",
    "graphql": "^0.11.0",
    "graphql-iso-date": "^3.5.0",
    "graphql-playground-middleware-express": "^1.6.0",
    "graphql-tools": "^2.21.0",
    "helmet": "^3.9.0",
    "lodash": "^4.17.5",
    "loggy": "^1.0.2",
    "moment": "^2.19.2",
    "mysql": "^2.14.1",
    "node-vibrant": "^3.0.0",
    "npm-run-all": "^4.0.2",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.1.12",
    "validator": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@creditkarma/graphql-loader": "^0.7.1",
    "@creditkarma/graphql-validator": "^0.5.0",
    "@forabi/graphql-request": "^1.6.8",
    "@hollowverse/clown": "^1.0.0",
    "@hollowverse/config": "^9.0.0",
    "@hollowverse/utils": "^5.0.2",
    "@hollowverse/validate-filenames": "^1.4.0",
    "@playlyfe/gql": "^2.6.0",
    "@types/body-parser": "^1.16.5",
    "@types/common-tags": "^1.4.0",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/faker": "^4.1.2",
    "@types/get-port": "^3.2.0",
    "@types/got": "^7.1.4",
    "@types/helmet": "^0.0.37",
    "@types/jest": "^22.2.0",
    "@types/lodash": "^4.14.74",
    "@types/node": "^8.0.8",
    "@types/shelljs": "^0.7.4",
    "@types/uuid": "^3.4.2",
    "@types/validator": "^6.3.0",
    "del-cli": "^1.1.0",
    "eslint": "^4.18.2",
    "faker": "^4.1.0",
    "get-port": "^3.2.0",
    "graphql-code-generator": "^0.8.21",
    "graphql-schema-linter": "^0.1.1",
    "graphql-tag": "^2.8.0",
    "husky": "^0.15.0-rc.13",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.10.2",
    "promise-mysql": "^3.2.1",
    "shelljs": "^0.7.8",
    "sqlite3": "^4.0.0",
    "ts-jest": "^22.4.1",
    "ts-node": "^3.2.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "uuid": "^3.1.0",
    "wait-for-mysql": "^1.0.0",
    "yarnhook": "^0.1.1",
    "npm-run-all": "^4.0.2"
  },
  "engines": {
    "node": ">= 9.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": false
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globalSetup": "./globalTestSetup.js",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "bin"
    ]
  }
}
